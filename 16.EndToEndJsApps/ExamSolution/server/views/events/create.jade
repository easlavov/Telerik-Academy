extends ../shared/layout
block main-content
    br
    form(method="post" class="form-group")
        .input-group
            label(for="title" class="input-group-addon") Title
            input(id="title" class="form-control" type="text" name="title" placeholder="Title")
        br
        .input-group
            label(for="description" class="input-group-addon") Description
            input(id="description" class="form-control" type="text" name="description" placeholder="Description")
        br
        .input-group
            label(for="location" class="input-group-addon") Location (optional)
            input(id="location" class="form-control" type="text" name="location" placeholder="Location")
        br
        .input-group
            label(for="phone" class="input-group-addon") Phone number
            input(id="phone" class="form-control" value="#{phone}" type="text" name="phone" placeholder="Phone number")
        br
        .input-group
            label(for="date" class="input-group-addon") Event date
            input(id="date" class="form-control" type="date" name="date" placeholder="Event date")
        br

        .input-group
            p(class="input-group-addon") Category
            each category in categories
                .input-group-addon
                    label(for="#{category}") #{category}
                    input(id="#{category}" type="radio" value="#{category}" name="category")
                    br
        br

        .input-group
            p(class="input-group-addon") Initiative
            each initiative in initiatives
                .input-group-addon
                    label(for="#{initiative}") #{initiative}
                    input(id="#{initiative}" type="radio" value="#{initiative}" name="initiative")
                    br
        br

        .input-group
            p(class="input-group-addon") Season
            each season in seasons
                .input-group-addon
                    label(for="#{season}") #{season}
                    input(id="#{season}" type="radio" value="#{season}" name="season")
                    br
        br

        .input-group
            p(class="input-group-addon") Publicity
            each pub in publicity
                .input-group-addon
                    label(for="#{pub}") #{pub}
                    input(id="#{pub}" type="radio" value="#{pub}" name="publicity")
                    br
        br
        input(type="submit" class="button btn-primary center-block" value="Submit")